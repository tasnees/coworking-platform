# Required Environment Variables for Production

# Next.js
NEXT_PUBLIC_APP_URL=https://your-production-url.com
NODE_ENV=production

# Authentication
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000  # Update with your production URL

# Database (MongoDB)
MONGODB_URI=your_mongodb_connection_string
MONGODB_DB=your_database_name

# Email Provider (Example using Nodemailer)
EMAIL_SERVER=smtp://username:password@smtp.example.com:587
EMAIL_FROM=noreply@yourdomain.com

# Optional: Google OAuth (if using Google sign-in)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Optional: Other OAuth providers
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Optional: API Keys
MAPBOX_ACCESS_TOKEN=your_mapbox_token
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Optional: Feature Flags
FEATURE_MAINTENANCE_MODE=false
FEATURE_SIGNUP_ENABLED=true

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # Max requests per window
